extends layout

block content
  #container
  script(id="home", type="text/template").
    <a href="/#/game/create"> Create new game</a>

  script(id="game", type="text/template").
    <form onsubmit="return false">
      <div class="form-group">
        <label for="word">Word</label>
        <input type="text" class="form-control" id="word" placeholder="Word">
      </div>
      <div class="form-group">
        <label for="opportunities">Number of opportunities</label>
        <input type="number" class="form-control" id="opportunities" placeholder="number of opportunities">
      </div>

      <button type="submit" class="btn btn-default">Submit</button>
    </form>
